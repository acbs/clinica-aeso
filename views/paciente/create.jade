extends ../layout

block content
    h4.text-muted Novo Cadastro
    hr
    br
    form#formPaciente(method="POST", action="/paciente/create", role="form")
        .container
            .panel.panel-primary
                .panel-heading
                    h4.text-muted Dados do Paciente
                .panel-body       
                    .col-md-12.mb-6
                        label(for='nome') Nome
                        input#nome.form-control(type='text', name="nome", value="#{paciente.nome || ''}", placeholder="Nome", autofocus)
                    .col-md-12.mb-6
                        label(for='cpf') CPF
                        input#cpf.form-control(type='tel', name="cpf", value="#{paciente.cpf || ''}", placeholder="Informe o CPF")
                    .col-md-12.mb-6
                        label(for='dataNascimento') Data Nascimento
                        input#dataNascimento.form-control(type='tel', name="dataNascimento", value="#{paciente.dataNascimento || ''}", placeholder="dd/mm/aaaa")
                    .col-md-12.mb-6
                        label(for='email') Email
                        input#email.form-control(type='email', name="email", value="#{paciente.email || ''}", placeholder="E-mail")
                    .col-md-12.mb-6
                        label(for='telefone') Telefone
                        input#telefone.form-control(type='tel', name="telefone", value="#{paciente.telefone || ''}", placeholder="(ddd + NÃºmero)")
                .panel-footer.text-center
                    input#salvar.btn.btn-success(type='submit', value='Salvar', name='salvar')
                    a.btn.btn-success(href='/paciente') Voltar